<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Login</label>
    <div class="col-sm-10">
      <%= f.text_field :email, :autofocus => true, class: "form-control", placeholder: "Login" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Hasło</label>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Hasło" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      	<%= f.submit "Zaloguj", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


<%= render "devise/shared/links" %>
