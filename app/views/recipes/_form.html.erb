<%= form_for @recipe, html: {class: "form-horizontal"} do |f| %>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Nazwa przepisu</label>
            <div class="col-sm-10">
                <input type="text" name="recipe[name]" value="<%= raw @recipe.name %>" class="form-control input-lg" id="name" placeholder="Nazwa przepisu" required>
            </div>
        </div>

        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Sk≈Çadniki</label>
            <div class="col-sm-10">
                <textarea name="recipe[items]"  class="form-control" placeholder="Opis..."><%= @recipe.items %></textarea>
            </div>
        </div>


        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Opis przepisu</label>
            <div class="col-sm-10">
                <textarea name="recipe[description]" class="form-control" placeholder="Opis..."><%= @recipe.description %></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Zapisz</button>
            <%=link_to 'Anuluj', root_path, class: "btn btn-default" %>
        </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

    $('textarea').summernote({
  height: 150

});
  })
</script>
